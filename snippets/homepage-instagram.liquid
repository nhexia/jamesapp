      // Masonary gallery
        function masonary(){
            if($('.pinterest-grid').length){
                var $container1 = $('.pinterest-grid');

                $container1.imagesLoaded( function() {
                    $container1.masonry({
                        itemSelector: '.item',
                    });
                })
            };
          if($('.instagram-grid').length){
                var $container2 = $('.instagram-grid');

