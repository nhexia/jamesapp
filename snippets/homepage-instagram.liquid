<script>
  $(document).ready(function(){
  	var userFeed = new Instafeed({
        get: 'user',
        userId: 5862806089,
        accessToken: '5862806089.5ea0515.29a3cd235e7e4f7c85660b888a730aca',
        limit: 6,
		target: 'instafake',
        resolution: 'standard_resolution',
		success  : function(data) {
            var counter = 0;
            data.data.forEach(function(image){
              try{
              	var parent = $('#instafeed .thumb.insta-image').get(counter);
                $('a',$(parent)).attr('href',image.link);
                //$('img',$(parent)).attr('src',data.data[i].image.original.url);
                $('a',$(parent)).css('background-image','url('+image.images.standard_resolution.url+')');
            	counter++;
              }catch(err){}
            });
            //return false;
        }
      });
      userFeed.run();
     $.ajax({
      url: '/apps/newsletter/Social/Pinterest',
      dataType: 'json',
      type: 'GET',
      success: function(data){
        var length = $('#instafeed .thumb.pin-image').length;
        for(i = 0; i < length; i++ ){
          try{
            //console.log(data.data[i].image.original.url);
            var parent = $('#instafeed .thumb.pin-image').get(i);
            $('a',$(parent)).attr('href',data.data[i].url);
            //$('img',$(parent)).attr('src',data.data[i].image.original.url);
            $('a',$(parent)).css('background-image','url('+data.data[i].image.original.url+')');
          	
          }catch(err){}
        }
      },
      error: function(data){
      	console.log(data);
      }
    });
    
  });
</script>
