<section class="homepage-section" class="no-fouc">
  {% if settings.display-wide %}
  {% else %}
  <div class="row">
    <div class="desktop-12 tablet-6 mobile-3">
      {% endif %}

      <div class="flexslider flex-loading split-images">
        
        <ul class="slides">

          {% for i in (1..2) %}
          {% assign slide_show = 'slide-' | append: i | append: '-check' %}

          {% if settings[slide_show] %}
          {% assign index = 'slide' | append: i %}          
          {% assign slide_link_url = 'slide' | append: i | append: '_url' %}         
                   
          {% assign slide_img_url = 'image' | append: i | append: '.jpg' %}
          {% assign slide_mobileimg_url = 'mobileimage' | append: i | append: '.jpg' %}
          
          {% assign slide_img_alt = 'slide' | append: i | append: '_alt' %}
          {% assign slide_title = 'slide-' | append: i | append: '-title' %}
          {% assign slide_caption = 'slide-' | append: i | append: '-caption' %}
          {% assign slide_button = 'slide-' | append: i | append: '-button' %}
          {% assign slide_button_text = 'slide-' | append: i | append: '-button-text' %}        
          {% assign slide_overlay = 'slide_' | append: i | append: '_opacity' %}        

          <li>
            <div class="desktopview">
              <a href="{{ settings[slide_link_url] }}">
                <img src="{{ slide_img_url | asset_img_url: '1400x' }}" alt="{{ settings[slide_img_alt] }}" />
                <span class="overlay" style="background:rgba(0,0,0,.{{settings[slide_overlay]}});"></span>
              </a>
            </div>
            <div class="mobileview">
              <a href="{{ settings[slide_link_url] }}">
                <img src="{{ slide_mobileimg_url | asset_img_url: '800x' }}" alt="{{ settings[slide_img_alt] }}" />
                <span class="overlay" style="background:rgba(0,0,0,.{{settings[slide_overlay]}});"></span>
              </a>
            </div>
            <div class="flex-caption {{ index }}">
              <div class="caption-inners">

                {% if settings[slide_title] != blank %}                        
                <h2 class="slide-title">{{ settings[slide_title] }}</h2>
                {% endif %}
                {% if settings[slide_caption] != blank %}            
                <p class="caption">{{ settings[slide_caption] }}</p>
                {% endif %}
                {% if settings[slide_button] %}
                <div class="cta">
                  <a href="{{ settings[slide_link_url] }}">{{ settings[slide_button_text] }}</a>
                </div>
                {% endif %} 
              </div>
            </div>
          </li>
          {% endif %}
          {% endfor %}
        </ul>
        
        
      </div>

      {% if settings.display-wide %}
      {% else %}
    </div>
  </div>
  {% endif %}    
  <div class="clear"></div>  
</section>

<style>
   
  .flexslider .slides .mobileview {display:none !important;} 
   
  @media screen and (max-width: 767px) {
	.flexslider .slides .desktopview {display:none !important;}
    .flexslider .slides .mobileview {display:block !important;} 
  }
  
</style>