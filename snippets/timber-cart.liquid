{% assign wholesale = false %}
{% if customer %}
	{% if customer.metafields.c_f.wholesale_customer == 'yes' %}
		{% assign wholesale = true %}
	{% endif %}
{% endif %}
{% if wholesale and settings.freeship_whole_en and settings.freeship_whole_code != blank %}
	{% assign ship_amount = settings.freeship_whole_amount %}
{% endif %}
{% if wholesale != true and settings.freeship_retail_en and settings.freeship_retail_code != blank %}
	{% assign ship_amount = settings.freeship_retail_amount %}
{% endif %}

<div id="CartDrawer" class="drawer drawer--right">
  <div class="drawer__header">
    <div class="table-cell">
    <h3>{{ 'cart.general.title' | t }}</h3>
    </div>
    <div class="table-cell">
    <span class="drawer__close js-drawer-close">
        {{ 'cart.general.close_cart' | t  }}
    </span>
    </div>
    
    
    
  </div>
  <div class="drawer__message">
    {% if settings.freeship_msg_amount != blank %}
      <p>
      	Spend ${{ settings.freeship_msg_amount }} or more and get
        <br/>
		free ground shipping!
      </p>
    {% endif %}
    </div>
  <div id="CartContainer"></div>
</div>